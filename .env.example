# SCHEDULE_TIMEZONE=Europe/Berlin

# Database Configuration
DB_ROOT_PASSWORD=rootpassword
DB_NAME=openportmonitor
DB_USER=opm
DB_PASSWORD=opmpassword

# Backend Configuration
